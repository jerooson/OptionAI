{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/api/health.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend/api/options/best.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend/api/options/scan.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/backend/api/health.js"
    },
    {
      "src": "/api/options/best",
      "dest": "/backend/api/options/best.js"
    },
    {
      "src": "/api/options/scan",
      "dest": "/backend/api/options/scan.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ]
} 